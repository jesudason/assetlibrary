<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GAMESTAGRAM</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
  <link href="https://fonts.googleapis.com/css?family=Space+Mono|Work+Sans" rel="stylesheet">
</head>
<body>
<div class="navbar">
	<% if logged_in? %>
		<a href="/">Home</a>
		<a href="/profile/<%= current_user.username %>"">My Profile</a>
		<a href="/asset/new">Post New Graphic</a>
		<a href="/chat">Chat</a>
		<a class="current_user">logged in as <%= current_user.username %></a>
	<% else %>
		<form class="login" action="/session" method="post">
			<label for="">email</label>
			<input type="text" name="email">
			<label for="">password</label>
			<input type="password" name="password">
			<button class="loginbtn">login</button>
			<a class="register" href="/register">Sign Up</a>
		</form>
	<% end %>
</div>
<div class="header">
	<h1 class="title">Game Art Library</h1>
	<% if logged_in? %>
		<form action="/session" method="post">
			<input type="hidden" name="_method" value="delete">
			<button class="logout"><p>logout</p></button>
		</form>
	<% end %>
</div>
  	<%= yield %>

</body>
</html>