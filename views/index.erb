<section class="search">
		<p id="search">Search by image or artist:</p>
	<form action="/search">
		<input name="search" type="text" placeholder="enter name of image or artist">
		<button class="submit">Submit</button>

	</form>
</section>
<section class="layout">
	<% @assets.each do |asset| %>
		<div class="asset">
			<a href="/asset/<%= asset.id %>"><img src="<%= asset.image.thumb.url %>"></a>
			<p><%= asset.name %></p>
		</div>
	<% end %>
	
</section>